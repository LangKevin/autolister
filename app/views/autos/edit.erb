<h1>Edit <%= @auto.name %></h1>

<form action="/autos/<%= @auto.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name</label>
  <input type="text" name="auto[name]" id="name" value="<%= @auto.name %>">

  <label for="owner_name">Owner Name</label>
  <input type="text" name="owner[name]" value="<%= @auto.owner.name %>" id="owner_name">

  <% Buyer.all.each do |buyer| %>
    <label><%= buyer.name %></label>
    <input type="checkbox" name="buyers[]" value="<%= buyer.id %>" id="<%= buyer.name %>" <%='checked' if @auto.buyers.include?(buyer) %>>
  <% end %>

  <input type="submit" value="Save">
</form>
